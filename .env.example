# Campus Connect - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# Django Configuration
# ============================================================================

# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new secret key with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-this-in-production

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# Allowed hosts (comma-separated for production)
# Example: ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,127.0.0.1
ALLOWED_HOSTS=127.0.0.1,localhost

# ============================================================================
# Database Configuration (Optional - defaults to SQLite)
# ============================================================================

# For PostgreSQL in production:
# DATABASE_URL=postgresql://username:password@localhost:5432/campus_connect

# For MySQL in production:
# DATABASE_URL=mysql://username:password@localhost:3306/campus_connect

# ============================================================================
# Email Configuration (for password reset)
# ============================================================================

# Gmail Setup:
# 1. Enable 2-Factor Authentication
# 2. Generate App Password at: https://myaccount.google.com/apppasswords
# 3. Use the generated password below

EMAIL_USER=your-email@gmail.com
EMAIL_USER_PASS=your-gmail-app-password

# Alternative Email Backend for Development (prints to console):
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# ============================================================================
# Static & Media Files (Production)
# ============================================================================

# For production with cloud storage (AWS S3, etc.):
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# ============================================================================
# Security Settings (Production)
# ============================================================================

# Session cookie settings (uncomment for production)
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# ============================================================================
# Third-Party Services (Optional)
# ============================================================================

# Sentry (Error tracking)
# SENTRY_DSN=your-sentry-dsn

# Redis (Caching & Sessions)
# REDIS_URL=redis://localhost:6379/0

# Celery (Background tasks)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# Development vs Production
# ============================================================================

# Set to 'production' when deploying
ENVIRONMENT=development

# ============================================================================
# Notes
# ============================================================================

# 1. NEVER commit the actual .env file to version control
# 2. Generate a new SECRET_KEY for production
# 3. Set DEBUG=False in production
# 4. Configure proper ALLOWED_HOSTS for production
# 5. Use environment-specific settings for databases
# 6. Enable HTTPS in production (set secure cookie flags)
# 7. Set up proper email backend for production
# 8. Consider using a secrets manager for sensitive data
